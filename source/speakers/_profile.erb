<section class="wrapper">
  <article class="speaker-profile desktop">
    <img src="<%= speaker.image_url =%>">
    <div class="speaker-profile-info">
      <h2><%= speaker.talk_title %></h2>
      <p><%= speaker.talk_abstract %></p>
      <br>
      <p><span class="speaker-bio-name"><%= speaker.full_name %></span> <%=
      speaker.job_title %>, <%= speaker.company %> <a href="http://twitter.com/<%=
      speaker.twitter_handle %>" class="social-media-link" target="_blank"><%=
      speaker.twitter_handle %></a></p>
      <p><%= speaker.bio %></p>
      <h4><a href="/#full-program">&#8592 Back to program</a></h4>
    </div>
  </article>
  <article class="speaker-profile mobile">
    <div class="speaker-profile-info">
      <h2><%= speaker.talk_title %></h2>
      <p><%= speaker.talk_abstract %></p>
    </div>
    <div>
      <img src="<%= speaker.image_url =%>">
      <h5><%= speaker.full_name %></h5>
      <p><%= speaker.job_title %>, <%= speaker.company %> <a
      href=<%= "http://twitter.com/#{speaker.twitter_handle}"%>
      class="social-media-link" target="_blank" ><%= speaker.twitter_handle %></a></p>
      <p><%= speaker.bio %></p>
    </div>
  </article>
  <p class="mobile"><a href="/#full-program">&#8592 Back to program</a></p>
</section>
