<div id="keynotes" class="section-card keynotes">
  <div class="mask"></div>
  <div class="section-container">
    <header>
      <h2 class="headline-display">Who's Speaking at CodeLand?</h2>
    </header>
    <section class="section-container speaker-overviews" aria-label="Keynote speakers at CodeLand 2021">
      <h3 class="text-h2" id="keynotes-header">Keynote Speakers</h2>

      <% data.keynotes2021.keynotes.each do |keynote| %>
      <div class="keynote-item">
        <div class="speaker-item--profile">
          <img
            src="<%= image_path keynote.image %>"
            alt="<%= keynote.name %> profile photo">
        </div>
        <div class="speaker-item--info">

          <h4 class="text-h3 keynote-item--title">
            "<%= keynote.title %>"
          </h4>
          <h5 class="text-h4 keynote-item--name">
            <%= keynote.name %>
          </h5>
          <div class="speaker-bio keynote-item--bio">
            <%= keynote.bio %>
          </div>
        </div>

      </div>
      <% end %>
    </section>
  </div>
</div>
