<footer id="footer" class="section-card footer">
  <div class="section-container">
    <div class="footer-header">
      <div class="footer-title--image">
        <img
          src="<%= image_path "codeland-2021-logo.png", resize: "320" %>"
          width="2167"
          height="993"
          alt="CodeLand 2021"
          sizes="(min-width: 675px) 610px,  calc((100vw - 2em) * .96)"
          srcset="
          <%= image_path "codeland-2021-logo.png", resize: "320" %> 320w,
          <%= image_path "codeland-2021-logo.png", resize: "610" %> 610w,
          <%= image_path "codeland-2021-logo.png", resize: "640" %> 640w,
          <%= image_path "codeland-2021-logo.png", resize: "960" %> 960w,
          <%= image_path "codeland-2021-logo.png", resize: "1220" %> 1220w,
          <%= image_path "codeland-2021-logo.png", resize: "1830" %> 1830w
          "
        >
      </div>
      <div class="footer-title--description text-h3">
        Produced by <a href="https://dev.to" target="_blank">DEV</a> and <a href="https://www.codenewbie.org/" target="_blank">CodeNewbie</a>.
      </div>
    </div>
    <div class="section-container--body">
      <div class="footer-body--information">
        <div class="footer-body--about">
          <section class="section-container--block" aria-label="Sponsorship More Info">
            <h2 class="text-h3" id="footerSponsorshipHeader">
              Sponsorship
            </h2>
