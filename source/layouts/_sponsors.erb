<section id="sponsors" class="section-card sponsors">
  <section class="section-container">
    <header class="section-container--header">
      <h1 class="section-container--title">
        Sponsors
      </h1>
      <p>
        A huge thank you to our amazing sponsors for helping bring Codeland to life!
      </p>
    </header>
    <div class="section-container--body media-grid-container">
      <% data.sponsors.sponsors[0..11].each do |sponsor| %>
        <figure class="media-grid-item">
          <a href=<%= sponsor.link %> target="_blank">
            <img src=<%= sponsor.image_url %>></img>
          </a>
        </figure>
      <% end %>
    </div>
  </section>
</section>
